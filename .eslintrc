{
    "root": true,
    "parser": "babel-eslint",
    "plugins": [
        "prettier"
    ],
    "extends": [
        "eslint:recommended",
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": 8,
        "sourceType": "module"
    },
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "rules": {
        "prettier/prettier": [
            2,
            {
                "singleQuote": true,
                "trailingComma": "all"
            }
        ]
    }
}